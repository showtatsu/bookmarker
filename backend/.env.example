# Environment variables for development
NODE_ENV=development

# Database
# For SQLite (default for development)
DATABASE_URL="file:./data/bookmarker.dev.db"

# For PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/bookmarker"

# JWT
JWT_SECRET=dev-secret-key-do-not-use-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-do-not-use-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=4000
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# OIDC (optional)
# OIDC_GOOGLE_CLIENT_ID=
# OIDC_GOOGLE_CLIENT_SECRET=
# OIDC_GITHUB_CLIENT_ID=
# OIDC_GITHUB_CLIENT_SECRET=
